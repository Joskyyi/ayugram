{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./js",
    "rootDir": "./ts",
    "sourceMap": true,
    "lib": ["DOM", "ES2020"]
  },
  "include": ["ts/**/*"],
  "exclude": ["node_modules"]
}
